BASE_URL = https://visitmorocconow.net/api
TOKEN = <paste access_token from /auth/login response>

/* ===========================
   AUTHENTICATION
   =========================== */

/* 1) Register */
[REGISTER]
Method: POST
URL: {{BASE_URL}}/auth/register
Headers:
  Content-Type: application/json
Body (raw JSON):
{
  "name": "Test User",
  "email": "test@example.com",
  "password": "password123",
  "password_confirmation": "password123"
}
Expected:
  - 201 or 200
  - JSON with user data and/or token

/* 2) Login */
[LOGIN]
Method: POST
URL: {{BASE_URL}}/auth/login
Headers:
  Content-Type: application/json
Body (raw JSON):
{
  "email": "test@example.com",
  "password": "password123",
  "device_name": "postman_test"
}
Expected:
  - 200
  - JSON with "access_token"
Action:
  - Copy "access_token" → TOKEN

/* 3) Logout */
[LOGOUT]
Method: POST
URL: {{BASE_URL}}/auth/logout
Headers:
  Authorization: Bearer {{TOKEN}}
Expected:
  - 200
  - Logged out confirmation

/* 4) Refresh Token */
[REFRESH TOKEN]
Method: POST
URL: {{BASE_URL}}/auth/refresh
Headers:
  Authorization: Bearer {{TOKEN}}
Expected:
  - 200
  - New token (if implemented)

/* 5) Get Profile */
[GET PROFILE]
Method: GET
URL: {{BASE_URL}}/auth/me
Headers:
  Authorization: Bearer {{TOKEN}}
Expected:
  - 200
  - Current user data

/* 6) Update Profile */
[UPDATE PROFILE]
Method: POST
URL: {{BASE_URL}}/auth/me
Headers:
  Authorization: Bearer {{TOKEN}}
  Content-Type: application/json
Body (raw JSON):
{
  "name": "Updated User Name"
}
Expected:
  - 200
  - Updated user data

/* 7) Change Password */
[CHANGE PASSWORD]
Method: POST
URL: {{BASE_URL}}/auth/change-password
Headers:
  Authorization: Bearer {{TOKEN}}
  Content-Type: application/json
Body (raw JSON):
{
  "current_password": "password123",
  "new_password": "newpassword123",
  "new_password_confirmation": "newpassword123"
}
Expected:
  - 200
  - Password change success message


